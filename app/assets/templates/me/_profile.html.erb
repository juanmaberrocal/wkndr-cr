<div class="row">

    <div class="col-xs-10 col-sm-6 col-md-5 profile">

    	<!-- current user header -->
    	<div class="profile-header">
        <div class="profile-img">
          <img ng-src="{{ currentUser.user.avatar.url }}" alt="" class="img-circle" />
          <div class="profile-img-mask" ng-click="openAvatarModal()" ng-hide="{{ currentUser.user.provider == 'facebook' }}">
            <span class="glyphicon glyphicon-plus"></span>
          </div>
        </div>
	    	<h1>{{ currentUser.user.username }}</h1>
    	</div>

    	<!-- current user data -->

    	<!-- footer -->
    	<div class="profile-footer">
    		<div class="row">
    			<div class="col-xs-12 col-sm-6 col-md-6 col-lg-3">
    				<button id="profile-logout" class="btn btn-block btn-danger text-uppercase" ng-click="logOut()">Log Out</button>
    			</div>
    		</div>
    		<div class="row"></div>
    	</div>

    </div>

</div>

<script type="text/ng-template" id="avatarModal.html">
  <div class="modal-header">
    <h3 class="modal-title" id="modal-title">Update Avatar</h3>
  </div>
  <div class="modal-body" id="modal-body">

    <!-- error messages -->
    <div class="bg-danger" ng-show="$modalCtrl.errors.error">
      <ul>
        <li ng-repeat="error in $modalCtrl.errors.messages">{{error}}</li>
      </ul>
    </div>

    <uib-tabset active="1">
      <uib-tab index="0">
        <uib-tab-heading>
          <i class="glyphicon glyphicon-camera"></i> Take Picture
        </uib-tab-heading>

        <div class="row">
          WIP
        </div>
      </uib-tab>
      <uib-tab index="1">
        <uib-tab-heading>
          <i class="glyphicon glyphicon-file"></i> Select File
        </uib-tab-heading>
        
        <div class="row">
          <div id="file-thumbnail" class="col-sm-4">
            <div class="thumbnail">
              <img data-ng-src="{{ $modalCtrl.avatar.imgPreview }}" alt="thumbnail" />
            </div>
          </div>
          <div id="file-upload" class="col-sm-8">
            <input type="file" id="avatar" name="avatar" file-upload-change="$modalCtrl.avatarImg" />
            <!-- input type="hidden" id="avatar_cache" name="avatar_cache" ng-model="$modalCtrl.avatar.cache" /-->
          </div>
        </div>

      </uib-tab>
    </uib-tabset>

  </div>
  <div class="modal-footer">
    <button class="btn btn-success" type="button" ng-disabled="!$modalCtrl.avatar.imgFile" ng-click="$modalCtrl.ok()">OK</button>
    <button class="btn btn-default" type="button" ng-click="$modalCtrl.cancel()">Cancel</button>
  </div>
</script>