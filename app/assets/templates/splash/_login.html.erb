<div class="row">

  <div class="col-xs-10 col-sm-6 col-md-5 login">

    <!-- login form -->
    <form id="login-form" name="login_form" role="form" ng-submit="loginSubmit(loginForm)" ng-init="loginForm={}">
      <h4>Log In</h4>

      <!-- error messages -->
      <div class="bg-danger" ng-show="loginErrors.errors">
        <ul>
          <li ng-repeat="error in loginErrors.messages">{{error}}</li>
        </ul>
      </div>

      <!-- email -->
      <div class="form-group has-feedback" ng-class="{ 'has-success': login_form.email.$touched && login_form.email.$valid, 'has-error': login_form.email.$touched && login_form.email.$invalid }">
        <label for="email" class="sr-only">Email:</label>
        <input type="text" id="email" name="email" class="form-control" placeholder="Email" required ng-model="loginForm.email" />
        <span class="glyphicon glyphicon-ok form-control-feedback" ng-show="login_form.email.$touched && login_form.email.$valid"></span>
        <span class="glyphicon glyphicon-remove form-control-feedback" ng-show="login_form.email.$touched && login_form.email.$invalid"></span>
      </div>

      <!-- password -->
      <div class="form-group has-feedback" ng-class="{ 'has-success': login_form.password.$touched && login_form.password.$valid, 'has-error': login_form.password.$touched && login_form.password.$invalid }">
        <label for="password" class="sr-only">Password:</label>
        <input type="password" id="password" name="password" class="form-control" placeholder="Password" required minlength="8" ng-model="loginForm.password" />
        <span class="glyphicon glyphicon-ok form-control-feedback" ng-show="login_form.password.$touched && login_form.password.$valid"></span>
        <span class="glyphicon glyphicon-remove form-control-feedback" ng-show="login_form.password.$touched && login_form.password.$invalid"></span>
        <p class="help-block" ng-show="login_form.password.$touched && login_form.password.$invalid-minlength">Password must be at least 8 characters long!</p>
      </div>

      <!-- remember -->
      <!-- <div class="form-group">
        <div class="checkbox">
          <label>
            <input type="checkbox" id="remember" name="remember" value="true" ng-model="signupForm.remember" />
            Remember me
          </label>
        </div>
      </div> -->

      <!-- submit -->
      <input type="submit" id="login" name="login" value="Log In" class="btn btn-primary btn-block text-uppercase" ng-disabled="login_form.$invalid" />
    </form>

  </div>
</div>